@model IEnumerable<Student>

@{ 
   ViewBag.Title = "Student List";
}
    
<div class="card-deck">
    @foreach (var student in Model)
    {
        var photoPath = "~/Images/" + (student.PhotoPath ?? "noimage.jpg");
        
        <div class="card m-3" style="min-width:18rem; max-width:30.5%">
            <div class="card-header">
                <h3> @student.Name</h3>
            </div>
            <img asp-append-version="true" class="card-img-top imageThumbnail" src="@photoPath" />
            <div class="card-footer text-center">
                <a asp-controller="home" asp-action="details" asp-route-id="@student.Id" class="btn btn-primary m-1">View</a>
                
                <a href="#" class="btn btn-primary m-1">Edit</a>
                <a href="#" class="btn btn-danger m-1">Delete</a>
            </div>
        </div>
                
    }
</div>
           
       


