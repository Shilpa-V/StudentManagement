@model Student

@{ 
    ViewBag.Title = "Create Student";
}

<form asp-action="Create" asp-controller="home" method="post" class="mt-3">
    <div class="form-group row">
        <label asp-for="Name" class="col-sm-2 col-form-label"></label>
        <div class="col-sm-10">
            <input asp-for="Name" />
        </div>
    </div>
    <div class="form-group row">
        <label asp-for="Email" class="col-sm-2 col-form-label"></label>
        <div class="col-sm-10">
            <input asp-for="Email" />
        </div>
     </div>
    <div class="form-group row">
        <label asp-for="Course" class="col-sm-2 col-form-label"></label>
        <div class="col-sm-10">
            <select asp-for="Course"
                    asp-items="Html.GetEnumSelectList<Course>()"></select>
        </div>
    </div>
    <div class="form-group row">
        <div class="col-sm-10">
            <button type="submit" class="btn btn-primary">Create</button>
        </div>
    </div>
</form>
